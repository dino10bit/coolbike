{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@Config/*": ["config/*"],
      "@Entities/*": ["entities/*"],
      "@Resolvers/*": ["graphql/resolvers/*"],
      "@Inputs/*": ["graphql/inputs/*"],
      "@Types/*": ["graphql/types/*"],
      "@Utils/*": ["utils/*"],
      "@Interfaces": ["interfaces"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
